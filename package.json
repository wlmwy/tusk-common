{
  "name": "@tusk-common/workspace",
  "version": "1.0.1",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @tusk-common/play dev",
    "docs:dev": "pnpm --filter @tusk-common/docs dev",
    "docs:build": "pnpm --filter @tusk-common/docs build",
    "test": "run-s test-utils test-comp",
    "test-comp": "cross-env NODE_ENV=test pnpm --filter @tusk-common/components test",
    "test-hooks": "cross-env NODE_ENV=test pnpm --filter @tusk-common/hooks test",
    "test-utils": "cross-env NODE_ENV=test pnpm --filter @tusk-common/utils test",
    "build": "run-s build-hooks build-comp",
    "build-comp": "cross-env NODE_ENV=production pnpm --filter tusk-common build",
    "build-hooks": "cross-env NODE_ENV=production pnpm --filter @tusk-common/hooks build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter tusk-common build:watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tusk-common/components": "workspace:*",
    "@tusk-common/hooks": "workspace:*",
    "@tusk-common/theme": "workspace:*",
    "@tusk-common/utils": "workspace:*",
    "@tusk-common/vite-plugins": "workspace:*",
    "tusk-common": "workspace:*",
    "lodash-es": "^4.17.21",
    "vue": "^3.5.13",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.20",
    "@types/shelljs": "^0.8.15",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/tsconfig": "^0.5.1",
    "async-validator": "^4.2.5",
    "cross-env": "^7.0.3",
    "lerna": "^8.1.9",
    "npm-run-all": "^4.1.5",
    "postcss": "8.2.14",
    "postcss-color-mix": "^1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.1",
    "shelljs": "^0.8.5",
    "typescript": "^5.7.3",
    "vite": "^5.1.4",
    "vite-plugin-compression2": "^1.3.3",
    "vitest": "^1.6.1",
    "vue-tsc": "^1.8.27"
  }
